doctype html
html
   head(lang='en')
      meta(charset="UTF-8")
      title pause - Work/Break Timer
      link(rel='stylesheet', href='components/bootstrap-material-design/dist/css/material.css')
      link(rel='stylesheet', href='css/style.css')
      link(rel='stylesheet', href='css/disruptor.css')
      script(src='components/jquery/dist/jquery.js')
      script(src='components/bootstrap-material-design/dist/js/material.js')
      script(src='components/bootstrap-material-design/dist/js/ripples.js')
      script(src='components/moment/moment.js')
      script(src='scripts/pomodimer.js')
      script(src='scripts/disruptor.js')
   body
      div#valign-container
         div#valign-container-cell
            h1#break-title Time for a pause.
            div#time-bar
               span#small-time 00:00
               span#end-time
            div.progress#time-progress
               div.progress-bar#time-progress-bar
            div#buttons
               button.btn.btn-primary.btn-raised#skip-break Begin Work Early
               button.btn.btn-primary.btn-raised#take-five Postpone 5 Minutes
               button.btn.btn-primary.btn-raised#take-ten Postpone 10 Minutes