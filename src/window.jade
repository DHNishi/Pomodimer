doctype html
html
    head(lang='en')
        meta(charset="UTF-8")
        title pause - Work/Break Timer
        link(rel='stylesheet', href='components/bootstrap-material-design/dist/css/material.css')
        link(rel='stylesheet', href='css/style.css')
        script(src='components/jquery/dist/jquery.js')
        script(src='components/bootstrap-material-design/dist/js/material.js')
        script(src='components/bootstrap-material-design/dist/js/ripples.js')
        script(src='components/moment/moment.js')
        script(src='scripts/jquery.nouislider.min.js')
        script(src='scripts/pomodimer.js')
        script(src='scripts/window.js')
    body
        center
        h1#time 10:00
        div#buttons
            button.btn.btn-primary.btn-flat#startNow Begin Work Early
            button.btn.btn-primary.btn-flat#pauseButton Pause
            button.btn.btn-primary.mdi-action-settings.btn-flat#openSettings
        div#settings
            div
                span.sliderHeader Focus Time:
                span#workMinutes 25 minutes
            div#workSlider.slider.shor
            div
                span.sliderHeader Break Time:
                span#breakMinutes 5 minutes
            div#breakSlider.slider.shor
            div.togglebutton
                    label Remind me about alarms when closing.
                        input#remindAlarmsCheckbox(type="checkbox")
            div.togglebutton
                label Clear alarms when closing.
                    input#clearAlarmsCheckbox(type="checkbox")

